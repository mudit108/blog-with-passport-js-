<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="assets/css/bootstrap.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <title>My blogs</title>
</head>
<body class="bg-dark">
    <header>
        <nav class="navbar navbar-expand-lg space-between bg-transparent fixed-top">
            <div class="container">
                <div class="navbar-brand">
                     <h1 class="text-white">My blogs</h1>
                </div>
                <button class="navbar-toggler bg-dark-subtle" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse P-2" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto nav-tabs  ">
                        <li class="nav-item"> <a href="/" class="nav-link active">HOME</a></li>
                        <li class="nav-item"> <a href="/add-blog" class="nav-link">ADD blog </a></li>  
                    </ul>
                </div>
                <div class="collapse navbar-collapse p-2 justify-content-end">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="assets/img/user/download.jpg" alt="" srcset="" class="rounded-circle">
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item text-secondary" href="/login">LOGIN</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-secondary" href="/logout">LOGOUT</a>
                            <a class="dropdown-item text-secondary" href="/signup">SIGN-UP</a>
                            <!-- <a class="dropdown-item" href="#"></a> -->
                        </div>
                    </li>
                </div>
                
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 100px;">
        <h2 class=" mb-5 text-light">Available blogS</h2>
        <div class="row bg-transparent">
            <% blogs.forEach(blog=> { %>
                <div class="col-6 mb-4 ">
                    <div class="card bg-transparent text-light" style="height: 320px;">
                        <img src="<%= blog.image %>" class="card-img-top " style="width:100%; height:50%"
                            alt="<%= blog.title %>">
                        <!-- <span class="top_ten_numbers"> 1 </span> -->
                        <div class="card-body pb-2 position-relative">
                            <h5 class="card-title fw-bolder">
                                <%= blog.title %>
                            </h5>
                            <h5 class="card-title mt-1 fs-6 blockquote-footer"><%= blog.date.toDateString() %></h5><br>
                            <text class="card-title pt-0 fs-6 blockquote-footer"><%= blog.location %></text>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary position-absolute"
                                style="bottom: 10px;">View Details</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-4">
        <p>&copy; 2024 StreamIt by Mudit </p>
    </footer>

    <script src="assets/css/bootstrap.bundle.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>